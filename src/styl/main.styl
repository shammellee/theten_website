@require 'nib'
global-reset()
@require 'inc'

html, body
  height 100%

body
  background      BACKGROUND_COLOR 
  background-size 100% 100%
  color           DARK_GREY
  font-family     Helvetica, Arial, sans-serif

.bg_img
  background-attachment   fixed
  background-position     center center
  background-repeat       no-repeat
  -webkit-background-size cover
  -moz-background-size    cover
  -o-background-size      cover
  background-size         cover

#logo_nav
  position fixed
  top         28px
  left        36px
  user-select none
  z-index 1
  .logo
    color         LOGO_COLOR
    cursor        pointer
    display       inline-block
    margin-bottom 19px

  #nav
    ul
      clearfix()
    li
      clear       both
      cursor      pointer
      display     block
      float       left
      font-size   .85em
      line-height 1.42
      padding     1px 5px 0
      transition  NAV_TRANSITION_SPEED TRANSITION_EASE

      &:hover
        background DARK_GREY
        transition 0s
        a
          color TEXT_SELECTED
      a
        text-decoration none

    .nav__main
      margin-bottom 8px
      .nav_item__main

        &.selected
          background DARK_GREY
          color      TEXT_SELECTED

        &:hover
          color TEXT_SELECTED
      a
        color DARK_GREY
    .nav__social
      .nav_item__social

        &:hover
          color TEXT_SELECTED
      a
        color LIGHT_GREY

#pages
  > div
    /*display  none*/
    height   100%
    left     0
    opacity  0
    overflow hidden
    position fixed
    top      0
    width    100%
    z-index  0

    &.selected
      /*display block*/
      opacity 1

    &.page
      transition opacity PAGE_TRANSITION_SPEED TRANSITION_EASE

    &.backdrop
      background-image        url('../img/bg.png')
      background-repeat       repeat-x
      -webkit-background-size auto 100%
      -moz-background-size    auto 100%
      -o-background-size      auto 100%
      background-size         auto 100%

  #home
    background-image url('../img/home_hero.jpg')

  #collection_zero
    .collection_item
      background-position right top
      -webkit-background-size auto 100%
      -moz-background-size    auto 100%
      -o-background-size      auto 100%
      background-size         auto 100%
      height                  100%
      position                absolute
      right                   0
      top                     0
      width                   100%
    .collection_item__01
      background-image url('../img/collection_zero_01.jpg')
    .collection_item__02
      background-image url('../img/collection_zero_02.jpg')
    .collection_item__03
      background-image url('../img/collection_zero_03.jpg')
    .collection_item__04
      background-image url('../img/collection_zero_04.jpg')
    .collection_item__05
      background-image url('../img/collection_zero_05.jpg')
    .collection_item__06
      background-image url('../img/collection_zero_06.jpg')
    .collection_item__07
      background-image url('../img/collection_zero_07.jpg')
    .collection_item__08
      background-image url('../img/collection_zero_08.jpg')
    #collection_nav_shell
      bottom      80px
      color       LIGHT_GREY
      left        36px
      position    fixed
      user-select none

  #philosophy
    background-image url('../img/philosophy_hero.jpg')

#footer
  bottom      16px
  color       LIGHT_GREY
  font-size   .718em
  left        37px
  position    absolute
  user-select none

